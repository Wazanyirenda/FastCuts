{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@fastcuts/db": ["packages/db/src"],
      "@fastcuts/db/*": ["packages/db/src/*"],
      "@fastcuts/ui": ["packages/ui/src"],
      "@fastcuts/ui/*": ["packages/ui/src/*"]
    }
  }
}
