{
  "name": "fastcuts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace apps/web run dev",
    "build": "npm --workspace apps/web run build",
    "prisma:migrate": "npm --workspace packages/db run prisma:migrate",
    "prisma:studio": "npm --workspace packages/db run prisma:studio"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.4.5"
  }
}
